
    
    <!-- 페이지 헤더 -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">최신목록
                </h1>
            </div>
        </div><!-- /.row -->
        
        
        
        <!-- 카테고리 id 값을 받아 컨텐츠 출력 --> 
        <div class="container">
            <% @category.registrations.each do |p| %>
                <div class="col-md-4 col-xs-4 portfolio-item">
                    <!-- 이미지 -->
                    <a href="/sell/<%= p.id %>">
                        <img class="img-responsive form-group" src="<%= p.productpic %>" width="500" height="500" />
                    </a>
                    
                    <!-- 상품 세부정보 -->
                    <div class="#">
                        <a href="/sell/<%= p.id %>" class="portfolio-text"> <%= p.productname %> </a>
    
                        <!-- 수정 삭제 버튼 -->
                        <div class="btn-group content-right">
                          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <span class="glyphicon glyphicon-option-vertical" aria-hidden="true"></span><span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu" role="menu">
                            <li><a href="/rewrite_view/<%= p.id %>">수정</a></li>
                            <li><a href="/destroy/<%= p.id %>">삭제</a></li>
                          </ul>
                        </div>
                    </div>
                </div>
            <% end %>
        </div><!-- container -->
    </div><!-- container -->
