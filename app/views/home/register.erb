
      
      
  <!-- 상품 입력 폼 -->    
  <div class="container" style="margin-top:50px;">
    <center>
        <form action="/register_save" method="POST" enctype="multipart/form-data">
          <!--<input type="hidden" value="" name="sell_id">-->
          
          <!-- 이미지 첨부 -->
          <fieldset class="form-group form-control">
          <input type="file" name="productpic" accept="image/*">
          </fieldset>
           
          <!-- 쿠폰 번호 입력 -->
          <fieldset class="form-group">
            <input type="number" class="form-control" id="formGroupExampleInput" placeholder="쿠폰번호를 입력해주세요" name="couponnumber">
          </fieldset>
          
          <!-- 물품명 입력 -->
          <fieldset class="form-group">
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="물품명" name="productname">
          </fieldset>
          
          <!-- 상세설명 입력 -->
          <fieldset class="form-group">
            <textarea type="text" class="form-control" id="formGroupExampleInput" placeholder="상세설명" rows="4" name="description"></textarea>
          </fieldset>
          
          <!-- 카테고리 입력 -->
          <select class="form-gorup form-control" name="category">
            <option value="1">카페/디저트</option>
            <option value="2">아이스크림/도넛</option>
            <option value="3">편의점/마트</option>
            <option value="4">버거/치킨/피자</option>
            <option value="5">프랜차이즈</option>
            <option value="6">영화/테마파크/연극</option>
          </select>
          <div id="category"></div>
          <br>
            
          <!-- 회사 입력 -->  
          <div class="row">
            <div class="col-md-8 col-xs-8">
              <select class="form-group form-control" name="company" >
                <option value="com1">회사1</option>
                <option value="com2">회사2</option>
                <option value="com3">회사3</option>
                <option value="com4">회사4</option>
                <option value="com5">회사5</option>
                <option value="com6">회사6</option>
              </select>
              <div id="company"></div>
            </div>  <!-- col-md-8 col-xs-8 -->
            
            <!-- 유효기간 입력 -->
            <div class="col-md-4 col-xs-4">
              <fieldset class="form-group">
                <input class="form-control" type="date" name="time" id="datepicker" placeholder="유효기간">
              </fieldset>
            </div> <!-- col-md-4 col-xs-4 -->
          
          </div> <!-- row -->
          
        
          <!-- 가격 입력 -->
          <fieldset class="form-group">
            <input class="form-control" type="number" name="price" min="0" max="999999" step="100" placeholder="가격">
          </fieldset>



  
          <!-- 돌아가기, 등록하기 버튼 -->
          <a class="btn btn-primary" href="/showroom">돌아가기</a>
          <button type="submit" class="btn btn-primary">등록하기</button>
        </form>
      </center>
  </div><!-- container -->
  <hr>
    
  
  
  
  
  
  
  
  
  <!-- 유효기간 / 카테고리 / 회사 -->
  <script>
    $( function() {
      $( "#datepicker" ).datepicker();
    } );
    
   
    $(function () {
        var cc = 0;
        $('select').click(function () {        
            cc++;
            if (cc == 2) {
                $(this).change();
                cc = 0;
            }         
        }).change (function () {
            $('#category').append('Changed triggered ');
            cc = -1;
        });      
    });
    
    $(function () {
        var cc = 0;
        $('select').click(function () {        
            cc++;
            if (cc == 2) {
                $(this).change();
                cc = 0;
            }         
        }).change (function () {
            $('#company').append('Changed triggered ');
            cc = -1;
        });      
    });
  
  </script>
