  <!-- 수정 폼 -->  
  <div class="container" style="margin-top:50px;">
    <center>
        <form action="/update_content/<%= @registered_update.id %>" method="POST">
          <!--<input type="hidden" value="" name="sell_id">-->
          
          <fieldset class="form-group">
            <input type="number" class="form-control" id="formGroupExampleInput" value="<%= @registered_update.couponnumber %>" name="couponnumber">
          </fieldset>
          
          
          
          <fieldset class="form-group">
            <input type="text" class="form-control" id="formGroupExampleInput" value="<%= @registered_update.productname %>" name="productname">
          </fieldset>
          
          <fieldset class="form-group">
            <textarea type="text" class="form-control" id="formGroupExampleInput"  rows="4" name="description"><%= @registered_update.description %></textarea>
          </fieldset>
          
          
          
            <select class="form-gorup form-control" name="category" value="<%= @registered_update.category %>" >
              <option value="cat1">카페/디저트</option>
              <option value="cat2">아이스크림/도넛</option>
              <option value="cat3">편의점/마트</option>
              <option value="cat4">버거/치킨/피자</option>
              <option value="cat5">프랜차이즈</option>
              <option value="cat6">영화/테마파크/연극</option>
            </select>
            <div id="category"></div>
            <br>
            
          <div class="row">
            <div class="col-md-8 col-xs-8">
            <select class="form-group form-control" name="company" value="<%= @registered_update.company %>" >
              <option value="com1">회사1</option>
              <option value="com2">회사2</option>
              <option value="com3">회사3</option>
              <option value="com4">회사4</option>
              <option value="com5">회사5</option>
              <option value="com6">회사6</option>
            </select>
            <div id="company"></div>
          </div>  
            
          
            <div class="col-md-4 col-xs-4">
  
            <fieldset class="form-group">
              <input class="form-control" type="date" name="time" id="datepicker" value="<%= @registered_update.time %>" >
            </fieldset>
            </div>
          </div>
          
      
          <fieldset class="form-group">
            <input class="form-control" type="number" name="price" min="0" max="999999" step="100" value="<%= @registered_update.price %>" >
          </fieldset>
  
  
          
          <a class="btn btn-primary" href="/showroom">돌아가기</a>
          <button type="submit" class="btn btn-primary">등록하기</button>
        </form>
      </center>
  </div>
  <hr>




  <!-- 유효기간 / 카테고리 / 회사 -->
  <script>
    $( function() {
      $( "#datepicker" ).datepicker();
    } );
    
    
    $(function () {
        var cc = 0;
        $('select').click(function () {        
            cc++;
            if (cc == 2) {
                $(this).change();
                cc = 0;
            }         
        }).change (function () {
            $('#category').append('Changed triggered ');
            cc = -1;
        });      
    });
    
