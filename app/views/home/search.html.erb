    <!-- 콘텐츠 -->
    <div class="container">
        
        <!-- 최신목록 -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">최신목록
                </h1>
            </div>
        </div>
        
        <% if @register_list.present? %>
        <!-- Register 전체 출력 -->
        <div class="container">
            <!-- Projects Row -->
            <% @register_list.each do |p| %>
                <div class="col-md-4 col-xs-4 portfolio-item">
                    <a href="/sell/<%= p.id %>">
                        <img class="img-responsive form-group" src="<%= p.productpic %>"/>
                    </a>
                    <div class="form-group">
                        <a href="/sell/<%= p.id %>" class="portfolio-text"> <%= p.productname %> </a>
					                    






<!-- 원래 있던 수정, 삭제 버튼 -->
                        <div class="btn-group content-right">
                          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <span class="glyphicon glyphicon-option-vertical" aria-hidden="true"></span><span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu" role="menu">
                           	<% if user_signed_in? %>  
                        		<li>
                        		 <% if can? :rewrite, p  %>
                        			<td><%= link_to '수정', home_rewrite_path(p.id)  %></td>
                        		  <% end %>
                        		</li>
                                
                                <li>
                          		  <% if can? :destroy, p %>
                        			<td><%= link_to '삭제', home_destroy_path(p.id) ,  data: { confirm: 'Are you sure?' } %></td>
                        		  <% end %>
                                </li>
                                
                                
                            <% end %>                                
                                    
                        	  
                          </ul>
                        </div><!-- btn-group content-right -->
                    </div><!-- form-group -->
                </div> <!-- col-md-4 col-xs-4 portfolio-item -->
            <% end %>
        </div> 
        <!-- container -->
        <hr>
    
     <% else %>
            <p> '<%= params[:search] %>'에 대한 검색결과가 없습니다.</p>
          <% end %>

    
    
    
